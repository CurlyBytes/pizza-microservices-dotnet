{
  "DetailedErrors": true,
  //Sets the Logging level for ASP.NET
  "Logging": {
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "ApplicationInsights": {
        "LogLevel": {
          "Default": "Information",
          // Uncomment to hide diagnostic messages from runtime and proxy
          "Microsoft": "Warning",
          "Yarp": "Information",
          "Microsoft.Hosting.Lifetime": "Information"
        }
      },

      "ReverseProxy": {
        // Routes tell the proxy which requests to forward
        "Routes": {
          "specials-swaggerfile": {
            "ClusterId": "specials-cluster",
            "Match": {
              "Path": "/api/specials/swagger/{*any}"
            },
            "Transforms": [
              { "PathRemovePrefix": "/api/specials" }
            ]
          },
          "specials-request": {
            "ClusterId": "specials-cluster",
            "Match": {
              "Path": "/specials/{*any}"
            }
          },
          "specials": {
            "ClusterId": "specials-cluster",
            "Match": {
              "Path": "/api/specials/{*any}"
            },
            "Transforms": [
              { "PathRemovePrefix": "/api" }
            ]
          },
          "toppings-swaggerfile": {
            "ClusterId": "toppings-cluster",
            "Match": {
              "Path": "/api/toppings/swagger/{*any}"
            },
            "Transforms": [
              { "PathRemovePrefix": "/api/toppings" }
            ]
          },
          "toppings-request": {
            "ClusterId": "toppings-cluster",
            "Match": {
              "Path": "/toppings/{*any}"
            }
          },
          "toppings": {
            "ClusterId": "toppings-cluster",
            "Match": {
              "Path": "/api/toppings/{*any}"
            },
            "Transforms": [
              { "PathRemovePrefix": "/api" }
            ]
          },
          "swagger": {
            "ClusterId": "swagger-cluster",
            "Match": {
              "Path": "/api/swagger/{**catch-all}"
            },
            "Transforms": [
              { "PathRemovePrefix": "/api" }
            ]
          }
        },
        // Clusters tell the proxy where and how to forward requests
        "Clusters": {
          "specials-cluster": {
            "HealthCheck": {
              "Active": {
                "Enabled": "false",
                "Interval": "00:00:10",
                "Timeout": "00:00:10",
                "Policy": "ConsecutiveFailures",
                "Path": "/healthz"
              }
            },
            "Metadata": {
              "ConsecutiveFailuresHealthPolicy.Threshold": "3"
            },
            "Destinations": {
              "specials-api": {
                "Address": "{{specials-api}}"
              }
            }
          },
          "toppings-cluster": {
            "Destinations": {
              "toppings-api": {
                "Address": "{{toppings-api}}"
              }
            }
          },
          "swagger-cluster": {
            "Destinations": {
              "swaggerui": {
                "Address": "{{yarp-pizza}}/swagger/index.html"
              }
            }
          }
        }
      }
    }